<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:id="@+id/ScrollView"
        android:layout_width="402dp"
        android:layout_height="286dp"
        android:layout_marginTop="56dp"
        android:contentDescription="@string/wybierz_zdjecie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/kw2"
                android:layout_width="182dp"
                android:layout_height="244dp"
                app:srcCompat="@drawable/kw2" />

            <ImageView
                android:id="@+id/kw1"
                android:layout_width="207dp"
                android:layout_height="225dp"
                app:srcCompat="@drawable/kw1" />

            <ImageView
                android:id="@+id/kw3"
                android:layout_width="157dp"
                android:layout_height="222dp"
                app:srcCompat="@drawable/kw3" />

            <ImageView
                android:id="@+id/kw4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/kw4" />

            <ImageView
                android:id="@+id/kw5"
                android:layout_width="323dp"
                android:layout_height="236dp"
                app:srcCompat="@drawable/kw5" />

            <ImageView
                android:id="@+id/kw6"
                android:layout_width="294dp"
                android:layout_height="171dp"
                app:srcCompat="@drawable/kw6" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageSwitcher
        android:id="@+id/imageSwitcher"
        android:layout_width="360dp"
        android:layout_height="356dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957"></ImageSwitcher>

</androidx.constraintlayout.widget.ConstraintLayout>